<Window x:Class="Curso_Csharp__INotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Curso_Csharp__INotifyPropertyChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel >
        
        <Label FontSize="20" Content="Nombre:"></Label>
        <TextBox Height="30" Width="170" Margin="10" HorizontalAlignment="Left" Text="{Binding Path = Nombre, Mode=TwoWay}"></TextBox>
        
        <Label FontSize="20" Content="Apellido:"></Label>
        <TextBox Height="30" Width="170" Margin="10" HorizontalAlignment="Left"  Text="{Binding Path = Apellido, Mode=TwoWay}"></TextBox>

        <Label FontSize="20" Content="Nombre Completo:"></Label>
        <TextBox Height="30" Width="170" Margin="10" HorizontalAlignment="Left"  Text="{Binding Path = Nombre_Completo, Mode=TwoWay}"></TextBox>

        
    </StackPanel>
</Window>
